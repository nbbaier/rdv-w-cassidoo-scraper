---
import { Icon } from 'astro-icon/components';
import { cn } from "@/lib/utils";

interface Props {
	name?: string;
	id?: string;
	value?: string;
	class?: string;
	size?: 'sm' | 'default';
	disabled?: boolean;
	[key: string]: any;
}

const {
	name,
	id,
	value,
	class: className = '',
	size = 'default',
	disabled = false,
	...rest
} = Astro.props;

const sizeClass = size === 'sm' ? 'h-8' : 'h-9';

const classes = cn(
	"border-input data-[placeholder]:text-muted-foreground text-muted-foreground focus-visible:border-ring focus-visible:ring-ring/50 aria-invalid:ring-destructive/20 dark:aria-invalid:ring-destructive/40 aria-invalid:border-destructive dark:bg-input/30 dark:hover:bg-input/50 flex w-fit items-center justify-between gap-2 rounded-md border bg-transparent px-3 py-2 text-sm whitespace-nowrap shadow-xs transition-[color,box-shadow] outline-none focus-visible:ring-[3px] disabled:cursor-not-allowed disabled:opacity-50 appearance-none pr-8 bg-[length:16px_16px] bg-[position:right_0.75rem_center] bg-no-repeat cursor-pointer",
	sizeClass,
	className
);
---

<div class="relative inline-block">
	<select
		data-slot="select-trigger"
		data-size={size}
		name={name}
		id={id}
		value={value}
		class={classes}
		disabled={disabled}
		{...rest}
	>
		<slot />
	</select>
	<Icon name="lucide:chevron-down" class="size-4 opacity-50 absolute right-3 top-1/2 -translate-y-1/2 pointer-events-none" />
</div>
